// Funciones
funcion box_collide(a, b) {
    si ((a->min->x >= b.max.x) || (a.max->x <= b->min->x) ||
        (a->min->y >= b.max.y) || (a.max->y <= b->min->y)) {
        retornar falso;
    }
    retornar verdadero;
}
